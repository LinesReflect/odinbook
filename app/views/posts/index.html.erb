<div class="index-main-wrapper" style="display: flex; flex-direction: column;">
    <h1 class="index-title" style="display: flex; justify-content: center;">Your Feed</h1>
    
    <div class="new-post-wrapper" style="align-self: center;">
        <%= turbo_frame_tag "new-post", src: new_post_path %>
    </div>
    <% if current_user.feed.present? %>
        <div id="posts">
            <% current_user.feed.sort_by(&:created_at).reverse.each do |post| %>
                <%= render partial: "post", locals: { post: post } %>
            <% end %>
        </div>
    <% else %>
        <div>
            <p>No posts have been made by users you follow...</p>
        </div>
    <% end %>
</div>