<% if @user == current_user %>
    <h2> <%= link_to "< Back to your profile", user_path(@user) %> </h2>
<% else %>
    <h2><%= link_to "< Back to #{@user.username} profile", user_path(@user) %></h2>
<% end %>

<div style="display: flex; gap: 5px; justify-content: center;">
    <% if @user == current_user %>
        <h1 class="followed-index-title" style="text-align: center;">Your Followers</h1>
    <% else %>
        <h1 class="followed-index-title" style="text-align: center;"><%= @user.username%> Followers</h1>
    <% end %>
    
    <h2>(<%= @user.followers.count %>)</h2>
</div>


<div class="users-display">
    <% @followers.each do |follower| %>
        <%= render partial: "users/user_discover_card", locals: { user: follower } %>
    <% end %>
</div>

<% if @pagy.pages > 1 %>
    <div id="users-pagination" class="pagination">
        <%== pagy_nav(@pagy) %>
    </div>
<% end %>