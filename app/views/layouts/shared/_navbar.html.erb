<% if current_user %>
    <%= link_to "Home", root_path unless request.path == root_path %>
    <%= link_to "My Profile", user_path(current_user) unless request.path == user_path(current_user) %>
    <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete }  %>
<% else %>
    <%= link_to "Log In", new_user_session_path  %>
    <%= link_to "Sign Up", new_user_registration_path %>
<% end %>